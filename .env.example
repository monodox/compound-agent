# Compound Agent Environment Variables
# Copy this file to .env.local and fill in your actual values

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Compound Agent"

# Authentication (WorkOS)
WORKOS_API_KEY=your_workos_api_key_here
WORKOS_CLIENT_ID=your_workos_client_id_here
WORKOS_WEBHOOK_SECRET=your_workos_webhook_secret_here

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/compound_agent

# Infrastructure APIs
VULTR_API_KEY=your_vultr_api_key_here

# Raindrop Integration
RAINDROP_SMARTSQL_API_KEY=your_smartsql_api_key_here
RAINDROP_SMARTBUCKETS_ACCESS_KEY=your_smartbuckets_access_key_here
RAINDROP_SMARTBUCKETS_SECRET_KEY=your_smartbuckets_secret_key_here
RAINDROP_SMARTMEMORY_ENDPOINT=https://your-smartmemory-endpoint.com
RAINDROP_SMARTINFERENCE_API_KEY=your_smartinference_api_key_here

# AI/ML Services
ANTIGRAVITY_MODEL_KEY=your_antigravity_api_key_here

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
SESSION_SECRET=your_session_secret_here

# Email Service (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@compoundagent.com

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token_here

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key_here

# Feature Flags (Optional)
FEATURE_FLAG_SERVICE_KEY=your_feature_flag_key_here

# Development Only
NODE_ENV=development
DEBUG=compound-agent:*